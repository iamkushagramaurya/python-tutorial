<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:background="@color/toolbar_color"
        android:title="Downloads"
        android:titleTextColor="@color/primary_text_color"
        android:layout_height="?attr/actionBarSize"/>

    <LinearLayout
        android:visibility="gone"
        android:id="@+id/extraLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/toolbar"
        android:orientation="vertical"
        android:paddingHorizontal="10dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/settingIcon"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:layout_centerVertical="true"
                android:src="@drawable/ic_settings"
                app:tint="@color/primary_text_color" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginStart="10dp"
                android:layout_toEndOf="@id/settingIcon"
                android:text="Smart Downloads"
                android:textStyle="bold" />
        </RelativeLayout>

        <LinearLayout
            android:id="@+id/intro"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:orientation="vertical"
           >

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="40dp">

                <TextView
                    android:id="@+id/tv1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Introducing Downloads for You"
                    android:textColor="@color/primary_text_color"
                    android:textSize="22sp"
                    android:textStyle="bold" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/tv1"
                    android:layout_marginTop="20dp"
                    android:gravity="center"
                    android:lines="3"
                    android:text="Click View (on Windows, press the Alt key \nfirst) Select Toolbars. Click a toolbar that you\n want to enable (e.g., Bookmarks Toolbar)"
                    android:textColor="@color/darker_gray" />
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="300dp"
                android:layout_height="250dp"
                android:layout_gravity="center"
                android:layout_marginTop="20dp">

                <View
                    android:layout_width="190dp"
                    android:layout_height="190dp"
                    android:layout_centerInParent="true"
                    android:background="@drawable/grey_circle" />

                <ImageView
                    android:layout_width="97dp"
                    android:layout_height="140dp"
                    android:layout_alignStart="@id/image"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentBottom="true"
                    android:layout_marginStart="20dp"
                    android:layout_marginBottom="40dp"
                    android:rotation="-15"
                    android:scaleType="fitXY"
                    android:src="@drawable/poster2" />

                <ImageView
                    android:layout_width="97dp"
                    android:layout_height="140dp"
                    android:layout_alignParentBottom="true"
                    android:layout_marginStart="-20dp"
                    android:layout_marginBottom="40dp"
                    android:layout_toEndOf="@id/image"
                    android:rotation="15"
                    android:scaleType="fitXY"
                    android:src="@drawable/poster" />

                <ImageView
                    android:id="@+id/image"
                    android:layout_width="112dp"
                    android:layout_height="150dp"
                    android:layout_alignParentBottom="true"
                    android:layout_centerHorizontal="true"
                    android:layout_marginBottom="50dp"
                    android:scaleType="fitXY"
                    android:src="@drawable/movie_item1" />
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="35dp"
                android:layout_marginHorizontal="30dp"
                android:background="@drawable/search_backgound"
                android:backgroundTint="#30A3FF"
                android:gravity="center">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_centerInParent="true"
                    android:gravity="center"
                    android:text="Set Up"
                    android:textColor="@color/primary_text_color"
                    android:textSize="20dp"
                    android:textStyle="bold" />
            </RelativeLayout>
        </LinearLayout>

        <LinearLayout
            android:visibility="gone"
            android:layout_marginTop="40dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="120dp"
                android:layout_height="120dp"
                android:layout_gravity="center"
                android:background="@drawable/grey_circle"
                android:backgroundTint="#1AEEEEEE">

                <ImageView
                    android:layout_width="90dp"
                    android:layout_height="90dp"
                    android:layout_centerInParent="true"
                    android:src="@drawable/ic_download_arrow"
                    app:tint="@color/darker_gray" />
            </RelativeLayout>
            <TextView
                android:layout_marginTop="20dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="Never be without Netflix"
                android:textColor="@color/primary_text_color"
                android:textSize="18sp"
                android:textStyle="bold" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:gravity="center"
                android:lines="3"
                android:text="Click View (on Windows, press the Alt key \nfirst) Select Toolbars. Click a toolbar that you\n want to enable (e.g., Bookmarks Toolbar)"
                android:textColor="@color/darker_gray" />

        </LinearLayout>

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="35dp"
            android:layout_gravity="center"
            android:layout_marginHorizontal="30dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/search_backgound"
            android:backgroundTint="@color/primary_text_color"
            android:gravity="center"
            android:paddingHorizontal="10dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_centerInParent="true"
                android:gravity="center"
                android:text="See What You Can Download"
                android:textColor="@color/black"
                android:textSize="18dp"
                android:textStyle="bold" />
        </RelativeLayout>
    </LinearLayout>
    <androidx.recyclerview.widget.RecyclerView
        android:layout_below="@id/toolbar"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="10dp"
        android:id="@+id/recycler_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

</RelativeLayout>